<h1><%= @mechanic.name %></h1>
<p>Experience: <%= @mechanic.experience %>

<h3>Current Workload</h3>
    <p><% @mechanic.rides.each do |ride| %>
        <%= ride.name %>
        <% end.sort %>
    </p>

<h3>Add Ride to Workload</h3>

<%= form_tag "/mechanics/#{@mechanic.id}", method: :post do %>
    <%= label_tag :ride %>
    <%= text_field_tag :ride %>
    <%= submit_tag "Add to Workload" %>
<% end %>